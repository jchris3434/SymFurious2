{% extends 'base.html.twig' %}

{% block title %}Course{% endblock %}

{% block body %}
<link rel="stylesheet" href="{{ asset('css/home.css') }}">
<script defer src={{ asset('/javascript/race.js') }}></script>
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    .pilote_list { margin-top: 2rem}
</style>
<nav>
    <a href="/home">
        <img src="../images/logoToyota.png">
    </a>
    {# <a href="/race">Prochaine Course</a> #}
    <a href="/admin" >Login Admin</a>
    <a href="/pilotes">Inscription Pilote</a>
</nav>
<div class="example-wrapper pilote_list">
    <h1>Prochaine Course</h1>

    <h2 class="pilote_list">Liste des pilotes participants</h2>
    <ul class="pilote_list">
        {% for pilote in pilotes %}
        <p id="pilotesNames">{{ pilote.nickname }}</p>
        {% endfor %}
    </ul>
    <button id="GO">go !</button>
</div>


{% endblock %}
